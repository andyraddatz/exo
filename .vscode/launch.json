    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: DEBUG=2 exo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/exo/main.py",
            "console": "integratedTerminal",
            "args": [
                "--wait-for-peers",
                "1"
            ],
            "env": {
                "DEBUG": "2"
            }
        }
    ]
}